{
  "name": "mrgit",
  "version": "4.1.0",
  "description": "A tool for managing projects build using multiple repositories.",
  "keywords": [
    "git",
    "repository",
    "submodule",
    "package",
    "multi-repository",
    "multi-repo",
    "lerna",
    "yarn",
    "workspaces"
  ],
  "main": "index.js",
  "type": "module",
  "dependencies": {
    "chalk": "^4.1.0",
    "cli-table": "^0.3.1",
    "generic-pool": "^3.7.1",
    "meow": "^9.0.0",
    "minimatch": "^10.2.1",
    "minimist": "^1.2.5",
    "minimist-options": "^4.1.0",
    "shelljs": "^0.10.0",
    "upath": "^2.0.0"
  },
  "devDependencies": {
    "@ckeditor/ckeditor5-dev-bump-year": "^54.2.0",
    "@ckeditor/ckeditor5-dev-changelog": "^54.2.0",
    "@ckeditor/ckeditor5-dev-ci": "^54.2.0",
    "@ckeditor/ckeditor5-dev-release-tools": "^54.2.0",
    "@inquirer/prompts": "^7.8.3",
    "@listr2/prompt-adapter-inquirer": "^3.0.2",
    "@vitest/coverage-v8": "4.0.8",
    "eslint": "^9.36.0",
    "eslint-config-ckeditor5": "^13.0.0",
    "eslint-plugin-ckeditor5-rules": "^13.0.0",
    "eslint-plugin-import": "^2.32.0",
    "fs-extra": "^11.3.0",
    "husky": "^8.0.2",
    "lint-staged": "^10.2.11",
    "listr2": "^9.0.2",
    "vitest": "^4.0.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cksource/mrgit.git"
  },
  "engines": {
    "node": ">=24.11.0",
    "pnpm": ">=10.14.0",
    "yarn": "\n\n┌─────────────────────────┐\n│  Hey, we use pnpm now!  │\n└─────────────────────────┘\n\n"
  },
  "author": "CKSource (http://cksource.com/)",
  "license": "MIT",
  "bugs": "https://github.com/cksource/mrgit/issues",
  "homepage": "https://github.com/cksource/mrgit#readme",
  "scripts": {
    "nice": "ckeditor5-dev-changelog-create-entry",
    "postinstall": "node ./scripts/postinstall.js",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "test:scripts": "vitest --config ./scripts-tests/vitest.config.mjs --run",
    "lint": "eslint",
    "release:prepare-changelog": "node ./scripts/preparechangelog.mjs",
    "release:prepare-packages": "node ./scripts/preparepackages.mjs",
    "release:publish-packages": "node ./scripts/publishpackages.mjs"
  },
  "bin": {
    "mrgit": "./index.js"
  },
  "files": [
    "index.js",
    "lib",
    "README.md",
    "CHANGELOG.md"
  ],
  "lint-staged": {
    "**/*": [
      "eslint --quiet"
    ]
  }
}
